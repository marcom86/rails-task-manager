<h1>My tasks</h1>

<ul class="tasks">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%=link_to task.title, task_path(task.id)%>
    </li>
  <%end%>
</ul>

<%= link_to 'Add a new task', new_task_path %>

<%= link_to new_task_path do %>
  <i class="fa fa-plus"></i> Add a new task
<% end %>

